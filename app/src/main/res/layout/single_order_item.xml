<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<data>
		<variable
			name="orderItem"
			type="com.a2a.app.data.model.OrderModel.Result" />
		<variable
			name="orderAdapter"
			type="com.a2a.app.ui.order.OrderAdapter" />
	</data>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:tag="cards main container">

		<LinearLayout
			android:paddingStart="32dp"
			android:paddingVertical="16dp"
			android:id="@+id/info"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_toStartOf="@id/container"
			android:orientation="vertical"
			tools:ignore="RtlSymmetry">

			<TextView
				android:id="@+id/orderDate"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@{orderItem.createdDate, default = 08032018}"
				android:textColor="@color/black"
				android:textSize="18sp" />

			<TextView
				android:id="@+id/orderId"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="left"
				android:layout_marginTop="4dp"
				android:text="@{orderItem.orderid, default = TCP12312123123}"
				android:textColor="@color/black"
				android:textSize="14sp" />

			<TextView
				android:id="@+id/orderStatus"
				android:text="@{orderItem.status, default = Delivered}"
				android:layout_marginTop="4dp"
				android:textColor="@color/colorPrimary"
				android:textSize="16sp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

		</LinearLayout>

		<LinearLayout
			android:paddingEnd="32dp"
			android:id="@+id/container"
			android:orientation="horizontal"
			android:layout_alignParentEnd="true"
			android:layout_centerVertical="true"
			android:gravity="center_vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			tools:ignore="RtlSymmetry">

			<ImageView
				card_view:srcCompat="@drawable/ic_next"
				android:layout_width="32dp"
				android:alpha="0.5"
				android:layout_height="32dp"
				card_view:tint="@color/grey" />

		</LinearLayout>

		<View
			android:background="@color/grey"
			android:alpha="0.2"
			android:layout_marginHorizontal="16dp"
			android:layout_below="@id/info"
			android:layout_width="match_parent"
			android:layout_height="2dp" />


	</RelativeLayout>
</layout>