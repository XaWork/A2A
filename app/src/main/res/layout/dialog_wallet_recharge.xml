<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/screen_padding">

    <TextView
        android:id="@+id/textView2"
        style="@style/poppins_bold_18_blue_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wallet Recharge"
        android:layout_marginHorizontal="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/storke"
        android:drawableStart="@drawable/wallet"
        android:layout_marginTop="@dimen/space_between_views"
        android:drawablePadding="8dp"
        android:drawableTint="@color/grey"
        android:hint="Enter Amount"
        android:inputType="phone"
        android:maxLength="10"
        android:padding="16dp"
        android:textColor="#5f6368"
        android:textColorHint="#9e9e9e"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/btnRecharge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/rectangle_green_round"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:padding="16dp"
        android:text="Recharge"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btnCancel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtAmount"
        tools:ignore="MissingPrefix" />

    <TextView
        android:id="@+id/btnCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rec_outline_full_round_grey"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:padding="16dp"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@color/grey"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnRecharge"
        app:layout_constraintTop_toBottomOf="@+id/edtAmount"
        tools:ignore="MissingPrefix" />

</androidx.constraintlayout.widget.ConstraintLayout>