<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        tools:context=".ui.onboarding.signup.SignUpFragment"
        tools:ignore="MissingPrefix">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:padding="16dp">

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/storke"
                    android:drawableStart="@drawable/mail"
                    android:drawablePadding="8dp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="16dp"
                    android:textColor="#5f6368"
                    android:textColorHint="#9e9e9e"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/storke"
                    android:drawableStart="@drawable/smartphone"
                    android:drawablePadding="8dp"
                    android:hint="Mobile Number"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:padding="16dp"
                    android:textColor="#5f6368"
                    android:textColorHint="#9e9e9e"
                    android:textSize="16sp"

                    />

                <EditText
                    android:id="@+id/referral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/storke"
                    android:drawableStart="@drawable/password_left"
                    android:drawablePadding="8dp"
                    android:hint="@string/referral"
                    android:inputType="phone"
                    android:padding="16dp"
                    android:textColor="#5f6368"
                    android:textColorHint="#9e9e9e"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etOtp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/storke"
                    android:drawableStart="@drawable/password_left"
                    android:drawablePadding="8dp"
                    android:hint="Otp"
                    android:maxLength="6"
                    android:inputType="textPersonName"
                    android:padding="16dp"
                    android:textColor="#5f6368"
                    android:textColorHint="#9e9e9e"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/tc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"
                        android:minHeight="0dp" />

                    <TextView
                        android:id="@+id/terms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        tools:text="asdkjsdfhjkdsb kasdbfghkjsad gfkjsdhfklasdhfk lsdhfk" />

                </LinearLayout>

                <TextView
                    android:id="@+id/btnGetOtp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/rectangle_green_round"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="GET OTP"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>